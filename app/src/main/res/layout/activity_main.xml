<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundx">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/calci">

        <TextView
            android:id="@+id/textView"
            android:layout_width="312dp"
            android:layout_height="150dp"
            android:textSize="25sp"
            android:padding="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/calci"
            app:layout_constraintTop_toTopOf="@id/calci"
            android:background="@drawable/textbox"
            />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="20dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintLeft_toLeftOf="@id/calci"
            app:layout_constraintTop_toTopOf="@id/calci"
            android:background="#ffffff"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="1"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/calci"
            app:layout_constraintTop_toBottomOf="@id/textView"
            android:background="@drawable/buttonx"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="4"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/calci"
            app:layout_constraintTop_toBottomOf="@id/button"
            android:background="@drawable/buttonx"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="7"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/calci"
            app:layout_constraintTop_toBottomOf="@id/button4"
            android:background="@drawable/buttonx"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="2"
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button"
            app:layout_constraintTop_toBottomOf="@id/textView"
            android:background="@drawable/buttonx"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="3"
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button2"
            app:layout_constraintTop_toBottomOf="@id/textView"
            android:background="@drawable/buttonx"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="5"
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button4"
            app:layout_constraintTop_toBottomOf="@id/button2"
            android:background="@drawable/buttonx"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="8"
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button7"
            app:layout_constraintTop_toBottomOf="@id/button5"
            android:background="@drawable/buttonx"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="6"
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button2"
            app:layout_constraintTop_toBottomOf="@id/button3"
            android:background="@drawable/buttonx"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="9"
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button2"
            app:layout_constraintTop_toBottomOf="@id/button6"
            android:background="@drawable/buttonx"/>

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="0"
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button10"
            app:layout_constraintTop_toBottomOf="@id/button8"
            android:background="@drawable/buttonx"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="+"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/calci"
            app:layout_constraintTop_toBottomOf="@id/button7"
            android:background="@drawable/buttony"/>

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="-"
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button2"
            app:layout_constraintTop_toBottomOf="@id/button9"
            android:background="@drawable/buttony"/>

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="*"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/calci"
            app:layout_constraintTop_toBottomOf="@id/button10"
            android:background="@drawable/buttony"/>

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="/"
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button2"
            app:layout_constraintTop_toBottomOf="@id/button11"
            android:background="@drawable/buttony"/>

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="="
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button12"
            app:layout_constraintTop_toBottomOf="@id/button19"
            android:background="@drawable/submitx"/>

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="C"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/calci"
            app:layout_constraintTop_toBottomOf="@id/button12"
            android:background="@drawable/buttonz"/>

        <Button
            android:id="@+id/button17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="AC"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button14"
            app:layout_constraintTop_toBottomOf="@id/button12"
            android:background="@drawable/buttonz"/>

        <Button
            android:id="@+id/button18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="("
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button10"
            app:layout_constraintTop_toBottomOf="@id/button0"
            android:background="@drawable/buttony"/>

        <Button
            android:id="@+id/button19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text=")"
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/button10"
            app:layout_constraintTop_toBottomOf="@id/button18"
            android:background="@drawable/buttony"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>